# ============================================================
# Neutropy Auth Configuration
# ============================================================

# ------------------------------------------------------------
# Public Configuration (exposed to browser)
# ------------------------------------------------------------

# Auth Mode: "A" (whitelabel redirect) or "B" (OIDC SSO)
NEXT_PUBLIC_AUTH_MODE=A

# Your HighLevel whitelabel app domain
NEXT_PUBLIC_GHL_APP_URL=https://app.neutropy.ai

# Forgot password destination (VERIFY exact URL for your setup)
# - Mode A: HighLevel-hosted reset flow on your whitelabel domain
# - Mode B: IdP-managed reset flow URL
NEXT_PUBLIC_FORGOT_PASSWORD_URL=https://app.neutropy.ai

# Signup strategy: "manual" or "highlevel"
NEXT_PUBLIC_SIGNUP_STRATEGY=manual

# Enable password fields on create-account page (not recommended for Mode A)
NEXT_PUBLIC_ENABLE_PASSWORD_FIELDS=false

# ------------------------------------------------------------
# Server-side Signup Configuration
# ------------------------------------------------------------

# Signup strategy (must match NEXT_PUBLIC_SIGNUP_STRATEGY)
SIGNUP_STRATEGY=manual

# Option 1 (Manual): Webhook URL for Zapier/Make/n8n
SIGNUP_WEBHOOK_URL=

# Option 2 (Automated): HighLevel API Token
# WARNING: VERIFY endpoints and payloads in official HighLevel API docs before enabling
# GHL_AGENCY_TOKEN=

# ------------------------------------------------------------
# Auth.js Configuration (Mode B SSO only)
# ------------------------------------------------------------

# Identity Provider: auth0 | okta | entra
IDP_PROVIDER=auth0

# Auth.js secret (generate with: openssl rand -base64 32)
AUTH_SECRET=

# Your app URL
AUTH_URL=https://neutropy.ai

# Auth0 Configuration
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_ISSUER=

# Okta Configuration (alternative to Auth0)
# OKTA_CLIENT_ID=
# OKTA_CLIENT_SECRET=
# OKTA_ISSUER=

# Microsoft Entra ID Configuration (alternative to Auth0/Okta)
# ENTRA_CLIENT_ID=
# ENTRA_CLIENT_SECRET=
# ENTRA_ISSUER=
